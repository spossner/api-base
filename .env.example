# ============================================================================
# FastAPI Application Configuration
# ============================================================================
# Copy this file to .env and adjust values for your environment
#
# Development: Set DEBUG=true, RELOAD=true, fewer workers
# Production:  Set DEBUG=false, RELOAD=false, more workers
# ============================================================================

# Application Settings
APP_NAME=FastAPI Production API
APP_VERSION=1.0.0
DEBUG=true
# ^ Set to false in production

# API Configuration
API_V1_PREFIX=/api/v1

# CORS Configuration
# Add your frontend origins here
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Server Configuration (Uvicorn)
HOST=0.0.0.0
PORT=8000
RELOAD=false
# ^ Set to true in development for better developer experience

SERVER_WORKERS=1
# ^ Uvicorn process workers
#   Development: Use 1 (required when RELOAD=true)
#   Production:  Use CPU cores (e.g., 4 for a 4-core machine)

# Job Queue Configuration
JOB_WORKERS=3
# ^ Background async job queue workers per process
#   Development: 3-5 workers is fine
#   Production:  10-20 for I/O-bound jobs, 1-2 for CPU-bound jobs
#   Total workers = SERVER_WORKERS Ã— JOB_WORKERS

JOB_RETENTION_SECONDS=3600
# ^ How long to keep completed/failed jobs in memory (default: 3600 = 1 hour)
#   After this time, old jobs are automatically removed to prevent memory leaks
#   Set higher if clients need longer to poll results

JOB_CLEANUP_INTERVAL_SECONDS=300
# ^ How often to run cleanup of old jobs (default: 300 = 5 minutes)
#   Lower values = more frequent cleanup, slightly more CPU usage
#   Higher values = less frequent cleanup, jobs may linger longer

# Logging
LOG_LEVEL=DEBUG
# ^ Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
#   Development: DEBUG
#   Production:  INFO or WARNING
